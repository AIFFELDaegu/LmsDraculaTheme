{
    "manifest_version": 3,
    "name": "LMS ThemeChanger",
    "description": "Aiffel LMS Theme Changer",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-16.png",
        "128": "logo/logo-16.png"
    },
    "action": {
        "default_title": "LMS Theme Changer",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ]

}
